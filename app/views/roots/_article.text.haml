- asin         = res.get('ASIN')
- release_date = res.get('ItemAttributes/ReleaseDate')
- content      = res.get('EditorialReviews/EditorialReview/Content')

[asin:#{ asin }:image:large]
\====
【目次】
[:contents]
- if release_date.present?
  * 発売日
  #{ release_date }
- if content.present? && content.length > 2
  * 内容紹介
  #{ content }
- if relative_asins.present?
  * 同じアイドルの商品
  - relative_asins.each do |relative_asin|
    [asin:#{ relative_asin }:image]
- if similar_goods_asins.present?
  * 類似の商品
  - similar_goods_asins.each do |similar_good_asin|
    [asin:#{ similar_good_asin }:image]

