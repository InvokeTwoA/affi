.widget-box.transparent.clearfix
  .widget-main
    = simple_form_for [:admin, resource],  html: { class: 'form form-horizontal'} do |f|
      .form-group
        %label.col-sm-2.control-label タイトル
        .col-sm-5
          = f.text_field :name, class: 'form-control'
      .form-group
        %label.col-sm-2.control-label 文字数など
        .col-sm-5
          = f.text_field :volume, class: 'form-control'
      .form-group
        %label.col-sm-2.control-label 賞金
        .col-sm-5
          = f.text_field :money, class: 'form-control'
      .form-group
        %label.col-sm-2.control-label 応募タイプ
        .col-sm-5
          = f.input_field :submit_type, as: :select, collection: ["webのみ", "web/原稿可", "原稿郵送のみ"], include_blank: false
      .form-group
        %label.col-sm-2.control-label 締め切り
        .col-sm-5
          = f.input_field :deadline_date, class: 'datepicker'
      .form-group
        %label.col-sm-2.control-label プロの応募
        .col-sm-5
          = f.input_field :can_professional, class: 'form-control'
      .form-group
        %label.col-sm-2.control-label 備考
        .col-sm-5
          = f.input_field :note, class: 'form-control'
      .form-group
        %label.col-sm-2.control-label 公式url
        .col-sm-5
          = f.input_field :public_url, class: 'form-control'
      .col-xs-12.clearfix.form-actions
        .col-md-offset-3.col-md-9
          = f.submit '送信', class: 'btn btn-primary'
