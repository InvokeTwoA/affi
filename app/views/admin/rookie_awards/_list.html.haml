.paginate
  /= paginate rookie_awards, remote: true
.main
  %table.table.table-striped.table-hover
    %tr
      %th.center 名前
      %th.center 応募方法
      %th.center 量
      %th.center 賞金
      /%th.center 画像
      %th.center 締め切り
      %th.center プロの応募
      %th.center 備考
      %th
    - rookie_awards.each do |rookie_award|
      %tr
        %td.center= rookie_award.name
        %td.center
          = link_to '公式ページ', rookie_award.public_url, target: '_brank'
        %td.center= rookie_award.volume
        %td.center= rookie_award.money
        %td.center= rookie_award.submit_type
        /%td.center= rookie_award.image
        %td.center= l rookie_award.deadline_date
        %td.center= rookie_award.can_professional
        %td.center= rookie_award.note
        %td.center
          = link_to '編集', edit_admin_rookie_award_path(rookie_award), class: 'btn btn-info'
          /= link_to '記事削除', rm_hatena_admin_article_path(article, url_type: url_type), method: :delete, class: 'btn btn-danger', remote: true
/.paginate
/  = paginate articles, remote: true
